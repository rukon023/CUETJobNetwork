<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="60dp"
                app:layout_constraintTop_toTopOf="parent">


                <Button
                    android:id="@+id/signup_btn"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pass_conf"
                    android:layout_marginTop="30dp"
                    android:text="Sign UP" />

                <EditText
                    android:id="@+id/lname_et"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@id/fname_et"
                    android:background="@drawable/custom_btn2"
                    android:ems="10"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:hint="Last Name"
                    android:textColorHint="#877D7D"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/cuetid_et"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/fname_et"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_btn2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="CUET ID(Ex: 1604001)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"

                    android:textColorHint="#877D7D" />

                <EditText
                    android:id="@+id/cuet_dept"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/cuetid_et"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_btn2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Department(Ex: CSE)"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"

                    android:textColorHint="#877D7D" />

                <EditText
                    android:id="@+id/address_et"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/cuet_dept"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_btn2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Address"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#877D7D" />

                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/address_et"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_btn2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="CUET Email"
                    android:textColorHint="#877D7D"
                    android:textColor="@color/black"

                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/password_et"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/email_et"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_btn2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Password"
                    android:textColorHint="#877D7D"
                    android:textColor="@color/black"

                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/pass_conf"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/password_et"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_btn2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Confirm Password"
                    android:textColorHint="#877D7D"
                    android:textColor="@color/black"

                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/fname_et"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/custom_btn2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"

                    android:textColorHint="#877D7D" />
            </RelativeLayout>
        </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>