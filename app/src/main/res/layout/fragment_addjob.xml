<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".JobPostActivity">

    <RelativeLayout
        android:id="@+id/relative_lt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/job_title_et"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/custom_btn2"
            android:ems="10"
            android:gravity="center"
            android:hint="Job Title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/company_et"
            android:ems="10"
            android:hint="Company"
            android:inputType="textPersonName"
            android:layout_below="@id/job_title_et"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/custom_btn2"
            />

        <EditText
            android:id="@+id/salary_et"
            android:layout_below="@id/company_et"
            android:ems="10"
            android:hint="Salary"
            android:inputType="numberDecimal"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/custom_btn2"
            />

        <EditText
            android:id="@+id/skill_et"
            android:layout_below="@id/salary_et"
            android:ems="10"
            android:hint="Job Skills"
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/custom_btn2"
            />

        <EditText
            android:id="@+id/description_et"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@id/skill_et"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_btn2"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Job Description"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/location_et"
            android:layout_below="@id/description_et"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/custom_btn2" />

        <Button
            android:id="@+id/post_btn"
            android:layout_below="@id/location_et"
            android:text="Post Job"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:background="@drawable/custom_btn2" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>