<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/user_dp_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/user_icon_male" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_dp_iv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="FName LName"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Email: u1604012@student.cuet.ac.bd"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cuet_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="CUET ID: 1604012"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cuet_dept_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cuet_id_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Department: CSE"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/addr_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cuet_dept_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Address: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/addr_et"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/cuet_dept_tv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/addr_tv"
        android:text="Sharishabari, Jamalpur"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addr_tv"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/delete_btn"
        android:text="Update" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addr_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Delete" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addr_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/delete_btn"
        android:text="Log out" />

</RelativeLayout>
